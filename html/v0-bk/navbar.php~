<?php
error_reporting(error_reporting() & ~E_NOTICE);
ob_start();
session_start();

include_once(__DIR__ . '/system.php');

$coretype = 'core';
$subdirectory = '';

if (isset($_SESSION['coremode'])) {
  $coretype = $_SESSION['coremode'];
} else {
  $_SESSION['coremode'] = "core";
  $coretype = "core";
}

//$path = $SITE_ROOT . $version_path;

if (!isset($_SESSION['logged_in'])) {
  //if you're not logged in, show defaults
  $account = '<a class="nav-link dropdown-toggle active" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
  Account
  </a>';

  $login = '<li><a class="dropdown-item" href="' . $SITE_ROOT . $version_path . '/login.php">Login</a></li>';
  $settings = '<li><a class="dropdown-item" href="' . $SITE_ROOT . $version_path . '/register.php">Sign up here.</a></li>'; //this will be the sign up button

  $adminbutton = "";
  $logout = "";
} else {
  // if the admin is logged in display the button to access the admin panel
  if ($_SESSION['mode'] == 4 || $_SESSION['mode'] == 5) {
    //activates admin button
    $adminbutton = '<li class="nav-item">
    <a class="nav-link active" href="' . $SITE_ROOT . $version_path . '/adminPanel/index.php">Admin</a>
    </li>';
  }
  $login = "";

  //settings button
  $settings = '<li class="nav-item">
  <a class="nav-link active" href="' . $SITE_ROOT . $version_path . '/myPage.php"> Settings</a>
  </li>';

  //logout button
  $logout = '<li class="nav-item">
  <a class="nav-link active" href="' . $SITE_ROOT . $version_path . '/logout.php"> Logout</a>
  </li>';

  //Account button/message
  $email = $_SESSION['email']; //don't want to show this email! there should be an actual account username.
  $username = substr($email, 0, strpos($email, "@"));
  $account = '<a class="nav-link dropdown-toggle active" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
  Welcome, ' . $username . '
  </a>';
}


$infobutton = "";
$url = $_SERVER['REQUEST_URI']; //get server url
if (strpos($url, 'info')) { //if we're in the core folder, on the info page, hide button
  $infobutton = "";
} else if (strpos($url, 'core/m-')) { //if we're in the core folder at a mechanism 'm-', display ? button
  $infobutton = "<a href='./info'><img class='topcorner' style='height: 40px; width: 40px' src='" . $SITE_ROOT . $version_path . "/questionicon.png'></a>";
  //echo "<script>window.alert('hi')</script>"; //a simple test to see if this wokrs
}

